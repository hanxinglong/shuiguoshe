<% if products.any? %>
<% cache cache_key_for("products_#{cache_prefix}", products) do %>
<div class="sidebar-box">
  <h2><%= head_caption %></h2>
  <div class="products">
    <% products.each do |product| %>
    <% cache product do %>
    <div class="product">
      <dl class="horizontal-dl">
        <dt>
          <%= image_tag product.image.url(:thumb), style:"width: 108px; height: 90px;" %>
        </dt>
        <dd><h3><%= product.title %></h3></dd>
        <dd style="padding-top: 7px;"><p class="text-muted" style="text-decoration: line-through;">市场价：<%= product.origin_price %>&nbsp;元/斤</p></dd>
        <dd><p class="green">现价：<span class="f16"><%= product.low_price %></span>&nbsp;元/斤</p></dd>
        <dd><%= link_to "立即预订", new_product_order_path(product), class: "btn btn-success btn-sm" %></dd>
      </dl>     
    </div>
    <% end %>
    <% end %>
  </div>
</div>
<% end %>
<% end %>