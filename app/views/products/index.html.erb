<% if mobile? %>
  <% if mobile? %>
    <% content_for :left_bar_button do %>
      <a onclick="javascript:history.go(-1)" class="navbar-button left back"></a>
    <% end %>

    <% content_for :right_bar_button do %>
      <a href="<%= root_path %>" class="navbar-button right home"></a>
    <% end %>
  <% end %>
  <div class="container">
    <div class="items-list" style="margin-top: 20px">
      <% if @products.any? %>
      <% cache cache_key_for(@cache_prefix, @products) do %>
        <%= render_mobile_grid_for @products, "/products/product_mobile" %>
      <% end %>
      <% else %>
        没有记录!
      <% end %>
    </div>
  </div>
<% else %>
<div class="row container-box">  
  <div class="col-md-12">
    <% if @products.any? %>
    <% cache cache_key_for(@cache_prefix, @products) do %>
      <% @products.each do |product| %>
      <div class="product" onmouseover="$(this).find('#cart-btn-<%= product.id %>').show();" onmouseout="$(this).find('#cart-btn-<%= product.id %>').hide();">
        <div class="col-md-<%= controller_name == "home" ? 4 : 3 %>" id="product-<%= product.id %>">
          <div class="thumbnail">
            <a href="<%= product_path(product) %>" class="item-link" target="_blank" title="<%= product.title %>">
              <%= image_tag product.image.thumb, alt: product.title, class: "img-responsive" %>
              <div class="caption">
                <h6 class="name"><%= product.title %></h6>
                <%= render_product_subtitle(product) %>
                <div class="price">
                  <span class="green">￥<span class="numeric"><%= number_with_precision(product.low_price, precision: 2) %></span></span>
                  <del class="text-muted">￥<%= number_with_precision(product.origin_price, precision: 2) %></del>
                  <span class="text-muted">（<%= product.units %>）</span>
                </div>
                <div class="price-extra">
                  <div class="pull-right" style="display:none" id="cart-btn-<%= product.id %>">
                    <%= add_to_cart_tag product %>
                  </div>
                  <span class="purchased">已售<%= product.orders_count %>件</span>
                </div>
              </div>
            </a>
          </div>
        </div> 
      </div>
      <% end %>
    <% end %>
    <% else %>
      没有记录!
    <% end %>
    </div>
  </div>
<% end %>

