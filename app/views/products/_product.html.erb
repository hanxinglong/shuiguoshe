<% cache("#{product}/#{product.orders_count}") do %>
<div class="product">
  <div class="col-md-4">
    <div class="thumbnail">
      <%= image_tag product.image.thumb, alt: product.title, class: "img-responsive" %>
      <div class="caption">
        <h3 class="f18"><%= product.title %></h3>
        
        <p>已订 <span class="green f20"><%= product.orders_count %></span> 笔</p>
        <p class="text-muted" style="text-decoration: line-through;">市场价：<%= product.origin_price %>&nbsp;元/斤</p>
        <p class="green">现价：<span class="f20"><%= product.low_price %></span>&nbsp;元/斤</p>
        <p><%= link_to "立即预订", new_product_order_path(product), class: "btn btn-success", role: "button" %></p>
      </div>
    </div>
  </div>
</div>
<% end %>