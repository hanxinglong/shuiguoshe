<% cache("#{product}/#{product.orders_count}") do %>
<div class="product">
  <div class="col-md-<%= controller_name == "home" ? 4 : 3 %>">
    <a href="<%= product_path(product) %>" class="product-link">
    <div class="thumbnail">
      <% if product.suggested? and controller_name != 'home' %>
        <div class="suggest-icon"><%= image_tag 'suggest_icon.png' %></div>
      <% end %>
      <%= image_tag product.image.thumb, alt: product.title, class: "img-responsive" %>
      <div class="caption">
          <h6 class="name"><%= product.title %></h6>
          <div class="row">
            <div class="col-xs-6 price">
              <span class="numeric"><%= product.low_price %></span>&nbsp;元/斤
            </div>
            <div class="col-xs-6 price-extra">
              <del><%= product.origin_price %>&nbsp;元/斤</del>
              <div><span class="purchased">已订<%= product.orders_count %>单</span></div>
            </div>
          </div>
          <!--div style="margin-top: 8px;">
            <%= link_to "立即预订", new_product_order_path(product), class: "btn btn-success" %>
          </div-->
          
      </div>
    </div>
    </a>
  </div> 
</div>
<% end %>