<% if mobile? %>

  <% content_for :mobile_title do %>
  找回密码
  <% end %>


  <% content_for :left_bar_button do %>
    <a onclick="javascript:history.go(-1)" class="navbar-button left back"></a>
  <% end %>

  <% content_for :right_bar_button do %>
    <a href="<%= new_user_session_path %>" class="navbar-button right home"></a>
  <% end %>
  
  <div class="container">
    <div class="user-login-form">
      <div style="padding: 20px; text-align:center" class="green"><i class="glyphicon glyphicon-ok"></i> 密码重置成功
        <%= link_to "去登录", new_user_session_path, class: "btn btn-warning" %>
      </div>
    </div>
  </div>
  
<% else %>
<div class="row">
  <div class="col-md-12">
    <div class="user-login-form">
      <%= render '/user_steps/step_info' %>
      <div style="padding: 20px; text-align:center" class="green"><i class="glyphicon glyphicon-ok"></i> 密码重置成功
        <%= link_to "去登录", new_user_session_path, class: "btn btn-warning" %>
      </div>
    </div>
  </div>
</div>
<% end %>