<div class="sale-item clearfix">
  <a href="<%= sale_path(sale) %>" target="_blank">
    <%= image_tag sale.cover_image.large, style: "width: 690px; height: 250px;" %>
    <div class="desc-container">
        <div class="pull-left">
            <%= image_tag sale.logo.normal if sale.logo %>
            <span class="name"><%= sale.title %></span>
        </div>
        <div class="pull-right">
            <span class="time-left pull-left">剩余11天</span>
            <span class="discount pull-left"><%= raw sale.subtitle %></span>
        </div>
    </div>
  </a>
</div>