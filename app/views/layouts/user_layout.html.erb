<% content_for :content do %>
<div class="row">
  <div class="col-sm-2">
    <div class="slide-left">
        <h2><%= link_to "我的账户", home_user_path, class: "user-home" %></h2>
        <ul class="nav ">
          <li class="<%= @current == 'user_orders' ? "active" : "" %>"><a href="<%= orders_user_path %>">我的订单</a></li>
          <li class="<%= @current == 'user_points' ? "active" : "" %>"><%= link_to "我的积分", points_user_path %></li>
