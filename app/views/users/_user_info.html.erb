<div class="user-info">
  <div class="user-avatar pull-left">
    <%= user_avatar_tag(current_user, :big) %>
  </div>
  <div class="user-intro pull-left">
    <h3><%= current_user.mobile %></h3>
    <p><%= current_user.email %></p>
  </div>
  <div class="user-points pul-right">
    <h3>积分</h3>
    <p>1000</p>
    <%= link_to "积分明细", '#', class: "btn btn-success btn-xs" %>
  </div>
</div>


